<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/text_sec_margin">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/text_sec_margin"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_sec_margin"
        android:layout_marginStart="@dimen/text_sec_margin">
        <TextView
            android:id="@+id/customer_amount"
            android:textSize="@dimen/dimen_15sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/persian_green_accent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItemSecondary"/>
        <TextView
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_gravity="end|center_vertical"
            android:id="@+id/date"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/dimen_12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItemSecondary"/>
    </FrameLayout>

    <TextView
        android:layout_marginStart="@dimen/text_sec_margin"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:id="@+id/remark_txt"
        android:textSize="@dimen/dimen_15sp"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItemSecondary"/>
</LinearLayout>
</android.support.v7.widget.CardView>