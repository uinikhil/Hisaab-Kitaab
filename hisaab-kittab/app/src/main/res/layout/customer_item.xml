<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/text_sec_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
<LinearLayout android:layout_margin="@dimen/dimen_4dp"
              android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="@dimen/text_sec_margin"
            android:layout_width="@dimen/dimen_60dp"
            android:id="@+id/letter_img"
            android:layout_height="@dimen/dimen_60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shared_by"
            android:layout_gravity="center"
            android:id="@+id/shared_by_text"
            android:visibility="gone"
            android:textSize="@dimen/dimen_12sp"
            android:textColor="@color/material_green_300"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/dimen_12sp"
            android:id="@+id/shared_by"/>
    </LinearLayout>

    <LinearLayout android:layout_margin="@dimen/text_sec_margin"
                  android:layout_width="match_parent"
                  android:id="@+id/main_list_item_panal"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
    <TextView
        android:textSize="@dimen/dimen_20sp"
        android:layout_marginStart="@dimen/text_sec_margin"
        android:id="@+id/customer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"/>

    <TextView
        android:layout_marginTop="@dimen/text_sec_margin"
        android:layout_marginStart="@dimen/text_sec_margin"
        android:textSize="@dimen/dimen_15sp"
        android:id="@+id/customer_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItemSecondary"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_sec_margin"
            android:layout_marginStart="@dimen/text_sec_margin">
            <TextView
                android:id="@+id/customer_amount"
                android:textSize="@dimen/dimen_15sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/persian_green_accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItemSecondary"/>
            <TextView
                android:layout_gravity="end|center_vertical"
                android:id="@+id/date"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/dimen_12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItemSecondary"/>
        </FrameLayout>

    </LinearLayout>
</LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:weightSum="4"
                      android:orientation="horizontal">
            <Button android:layout_weight="1"
                    android:id="@+id/add_money"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    style="?android:buttonBarButtonStyle"
                    android:layout_height="wrap_content"
                    android:text="Add Amount"/>
            <Button android:layout_weight="1"
                    android:id="@+id/paid"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    style="?android:buttonBarButtonStyle"
                    android:layout_height="wrap_content"
                    android:text="Pay Now"/>
            <Button android:layout_weight="1"
                    android:id="@+id/share"
                    android:layout_gravity="center"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Share"/>
            <Button android:layout_weight="1"
                    android:id="@+id/delete"
                    android:layout_gravity="center"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Delete"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>